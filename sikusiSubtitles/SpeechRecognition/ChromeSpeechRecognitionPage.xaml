<UserControl x:Class="sikusiSubtitles.SpeechRecognition.ChromeSpeechRecognitionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sikusiSubtitles.SpeechRecognition"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label Content="音声認識 - Chrome" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" Margin="0,0,0,10"/>
            <GroupBox Header="接続情報" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Content="ポート"></Label>
                    <TextBox x:Name="portTextBox" Grid.Column="1" HorizontalAlignment="Left" Width="100" VerticalAlignment="Stretch" VerticalContentAlignment="Center" TextAlignment="Right" PreviewTextInput="portTextBox_PreviewTextInput" PreviewKeyDown="portTextBox_PreviewKeyDown"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" PreviewTextInput="NumberInputValidator" >
                        ※Chromeからの接続に使用するポートです。
                    </TextBlock>
                </Grid>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>
