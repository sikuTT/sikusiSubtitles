<UserControl x:Class="sikusiSubtitles.Translation.DeepLTranslationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sikusiSubtitles.Translation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="翻訳 - DeepL" FontSize="30" FontWeight="Bold" TextWrapping="Wrap"/>
        <GroupBox Header="認証情報" Padding="10" Margin="0,10,0,0">
            <Grid Margin="0,2,0,2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="APIキー" VerticalAlignment="Center"/>
                <PasswordBox Grid.Column="1" Margin="0,2,0,2" VerticalAlignment="Stretch" VerticalContentAlignment="Center"/>
            </Grid>
        </GroupBox>

    </StackPanel>
</UserControl>
